<Window x:Class="qsslWPF.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:qsslWPF.View"
        mc:Ignorable="d"
        Title="LoginView" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">
    <Border CornerRadius="20"
            Background="#1F4784"
            BorderBrush="SkyBlue"
            BorderThickness="3"
            >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width ="25"/>
                    <ColumnDefinition Width ="25"/>
                    <ColumnDefinition Width ="8"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="QSSL Login"
                           Foreground="White"
                           FontSize="12"
                           FontFamily="Consolas"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
                <Button x:Name="btnMinimize"
                        Background="#1F4784"
                        BorderThickness="0"
                        Content="-"
                        Foreground="White"
                        FontSize="16"
                        FontFamily="Consolas"
                        Cursor="Hand"
                        Grid.Column="1"
                        Margin="0,1,0,0"
                        Click="btnMinimize_Click">
                </Button>
                <Button x:Name="btnCloseWindow"
                        Background="#1F4784"
                        BorderThickness="0"
                        Content="X"
                        Foreground="White"
                        FontSize="12"
                        FontFamily="Consolas"
                        Cursor="Hand"
                        Grid.Column="2"
                        Margin="0,1,0,0"
                        Click="btnCloseWindow_Click">
                </Button>
            </Grid>

            <StackPanel Width="250"
                        Grid.Row="2"
                        Orientation="Vertical"
                        Margin="0,35,0,0">

                <TextBlock Text="QSSL" 
                           Foreground="White"
                           FontSize="25"
                           FontWeight="Normal"
                           HorizontalAlignment="Center"
                           FontFamily="Forte"/>
                
                <Image Source="/Resources/vault.jpg" 
                       Width="150" Height="150"/>

                <TextBlock Text="Quantum safe access" 
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Normal"
                           HorizontalAlignment="Center"
                           FontFamily="Forte"
                           TextWrapping="Wrap"
                           TextAlignment="Justify"/>

                <TextBlock Text="Username" 
                           Foreground="DarkGray"
                           FontSize="12"
                           FontWeight="Normal"
                           HorizontalAlignment="Center"
                           FontFamily="Montserrat"
                           Margin="0,10,0,0"/>

                <TextBox x:Name="txtUser"
                         FontSize="13"
                         FontFamily="Montserrat"
                         FontWeight="Medium"
                         Background="Transparent"
                         Foreground="White"
                         CaretBrush="LightGray"
                         BorderBrush="DarkGray"
                         BorderThickness="1,1,1,1"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         Margin="0,5,0,0"/>
                <TextBlock Text="Quantum safe access" 
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Normal"
                           HorizontalAlignment="Center"
                           FontFamily="Forte"
                           TextWrapping="Wrap"
                           TextAlignment="Justify"/>
            </StackPanel>

        </Grid>

    </Border>
</Window>
